<div
  id="{{ section.settings.form_5_unique_id }}"
  class="fifth-form"
  style="display: none;"
>
  <div class="form-block-wrapper form-block-5 flex-block">
    <div class="left-block">
      <div class="left-block-box">
        <!-- <div class="block-num">5</div> -->
        <div class="content-box">
          <p class="ques-text content-heading">
            
            {{ section.settings.form_5_question }}
          </p>
          <p class="sub-text content-desc"></p>
          <div class="options-box">
            {% if section.settings.form_5_option_1 != blank %}
              <div
                class="option option1"
                onclick="handleOptionClickForForm5(event, 'age_under_forty')"
              >
                <span>A</span> {{ section.settings.form_5_option_1 }}
              </div>
            {% endif %}
            {% if section.settings.form_5_option_2 != blank %}
              <div
                class="option option1"
                onclick="handleOptionClickForForm5(event, '{{ section.settings.real_fur_end_unique_id }}')"
              >
                <span>B</span> {{ section.settings.form_5_option_2 }}
              </div>
            {% endif %}
            {% if section.settings.form_5_option_3 != blank %}
              <div
                class="option option1"
                onclick="handleOptionClickForForm5(event, '{{ section.settings.procelain_end_unique_id }}')"
              >
                <span>C</span> {{ section.settings.form_5_option_3 }}
              </div>
            {% endif %}
            {% if section.settings.form_5_option_4 != blank %}
              <div
                class="option option1"
                onclick="handleOptionClickForForm5(event, '{{ section.settings.plastic_end_unique_id }}')"
              >
                <span>D</span> {{ section.settings.form_5_option_4 }}
              </div>
            {% endif %}
          </div>
          <div class="buttons">
            <button
              id="backButton5"
              style="display: block;"
              class="button"
              onclick="showPreviousSnippet5('toy_replica')"
            >
               {{ section.settings.back_btn_text }}
            </button>
          </div>
        </div>
      </div>
    </div>
    <div class="right-block">
      <div class="img-box">
        <img src="{{ section.settings.form_5_image | image_url }}" alt="Image 5">
      </div>
    </div>
  </div>
</div>

<script>
  const options5 = document.querySelectorAll('.form-block-5 .options-box .option');

  function handleOptionClickForForm5(event, nextSnippetId) {
    const clickedOptionText = event.currentTarget.textContent.trim().replace(/[A-Z]\s/, '');
    const snippetId = event.currentTarget.closest('.fifth-form').id;

    const currentSnippet = document.getElementById(snippetId);
    currentSnippet.style.display = 'none';

    const nextSnippet = document.getElementById(nextSnippetId);
    if (nextSnippet) {
      nextSnippet.style.display = 'block';
    }

    const lineItemId = `line_item-${snippetId}`;
    const inputField = document.getElementById(lineItemId);

    if (inputField) {
      inputField.value = clickedOptionText;
      console.log(inputField.value);
    }
  }

  options5.forEach(option => {
    option.addEventListener('click', function(event) {
      const nextSnippetId = option.dataset.nextSnippetId;
      handleOptionClickForForm5(event, nextSnippetId);
    });
  });

  function showPreviousSnippet5(previousSnippetId) {
    const previousSnippet = document.getElementById(previousSnippetId);
    if (previousSnippet) {
      previousSnippet.style.display = 'block';
    }

    const currentSnippet = document.getElementById('{{ section.settings.form_5_unique_id }}');
    currentSnippet.style.display = 'none';
  }
</script>
