<div id="{{ section.settings.form_7_unique_id }}" class="seventh-form" style="display: none;">
  <div class="form-block-wrapper form-block-7 flex-block">
    <div class="left-block">
      <div class="left-block-box">
        <!-- <div class="block-num">7</div> -->
        <div class="content-box">
          <p class="ques-text content-heading">
            {{ section.settings.form_7_question }}
          </p>
          <p class="sub-text content-desc">{{ section.settings.form_7_question_description }}</p>
          <div class="options-box">
            {% if section.settings.form_7_option_1 != blank %}
              <div
                class="option option1 option--size" data-target="1"
                onclick="handleOptionClickForForm7(event, 'spend_nights_at_hospital')"
              >
                <span>A</span> {{ section.settings.form_7_option_1 }}
              </div>
            {% endif %}
            {% if section.settings.form_7_option_2 != blank %}
              <div
                class="option option1 option--size" data-target="2"
                onclick="handleOptionClickForForm7(event, 'spend_nights_at_hospital')"
              >
                <span>B</span> {{ section.settings.form_7_option_2 }}
              </div>
            {% endif %}
            {% if section.settings.form_7_option_3 != blank %}
              <div
                class="option option1 option--size" data-target="3"
                onclick="handleOptionClickForForm7(event, 'spend_nights_at_hospital')"
              >
                <span>C</span>{{ section.settings.form_7_option_3 }}
              </div>
            {% endif %}
            {% if section.settings.form_7_option_4 != blank %}
              <div
                class="option option1 option--size" data-target="4"
                onclick="handleOptionClickForForm7(event, 'spend_nights_at_hospital')"
              >
                <span>D</span> {{ section.settings.form_7_option_4 }}
              </div>
            {% endif %}
            {% if section.settings.form_7_option_5 != blank %}
              <div
                class="option option1 option--size" data-target="5"
                onclick="handleOptionClickForForm7(event, 'spend_nights_at_hospital')"
              >
                <span>E</span> {{ section.settings.form_7_option_5 }}
              </div>
            {% endif %}
          </div>
          <div class="buttons">
            <button
              id="backButton7"
              style="display: block;"
              class="button"
              onclick="showPreviousSnippet7('age_under_forty')"
            >
               {{ section.settings.back_btn_text }}
            </button>
          </div>
        </div>
      </div>
    </div>
    <div class="right-block">
      <div class="img-box">
        <img src="{{ section.settings.form_7_image | image_url }}" alt="Image 7">
      </div>
    </div>
  </div>
</div>

<script>
  const options7 = document.querySelectorAll('.form-block-7 .options-box .option');

  function handleOptionClickForForm7(event, nextSnippetId) {
   // Get the target value from the clicked element
  var targetValue = event.currentTarget.getAttribute('data-target');
  
  // Get all target elements
  var targetElements = document.querySelectorAll('.under--forty--product');
  
  // Loop through all target elements
  targetElements.forEach(function(element) {
    // Check if the data-underforty attribute matches the target value
    if (element.getAttribute('data-underforty') === targetValue) {
      console.log(targetValue);
      // Show the matching element
      element.style.display = 'block';
    } else {
      // Hide other elements
      element.style.display = 'none';
    }
  });
   
    const clickedOptionText = event.currentTarget.textContent.trim().replace(/[A-Z]\s/, '');
    const snippetId = event.currentTarget.closest('.seventh-form').id;

    const currentSnippet = document.getElementById(snippetId);
    currentSnippet.style.display = 'none';

    const nextSnippet = document.getElementById(nextSnippetId);
    if (nextSnippet) {
      nextSnippet.style.display = 'block';
    }

    const lineItemId = `line_item-${snippetId}`;
    const inputField = document.getElementById(lineItemId);

    if (inputField) {
      inputField.value = clickedOptionText;
      console.log(inputField.value);
    }
  }

  options7.forEach(option => {
    option.addEventListener('click', function(event) {
      const nextSnippetId = option.dataset.nextSnippetId;
      handleOptionClickForForm7(event, nextSnippetId);
    });
  });

  function showPreviousSnippet7(previousSnippetId) {
    const previousSnippet = document.getElementById(previousSnippetId);
    if (previousSnippet) {
      previousSnippet.style.display = 'block';
    }

    const currentSnippet = document.getElementById('{{ section.settings.form_7_unique_id }}');
    currentSnippet.style.display = 'none';
  }
</script>
