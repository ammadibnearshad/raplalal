<div
  id="{{ section.settings.form_18_unique_id }}"
  class="form-block-wrapper form-block-18 flex-block flex-center single-form"
  style="display: none;"
>
  <div class="left-block">
    <div class="left-block-box">
      <!-- <div class="block-num">18</div> -->
      <div class="content-box">
        <p class="ques-text content-heading">
          {{ section.settings.form_18_question }}
        </p>
        <div class="options-box">
          <!-- <form action=""> -->
            <div class="form-container">
              <div class="form-group">
                <input
                  type="text"
                  class="form-control owner_name"
                  placeholder="{{ "general.type_form.reply_here_text" | t }}"
                  autocomplete="name"
                  id="{{ section.settings.form_18_owner_name_unique_id }}"
                >
              </div>
            </div>
             <div class="buttons">
                <button class="back-button-18 button" style="display: block;">{{ section.settings.back_btn_text }}</button>
                <button class="next-button-18 button" data-next="{{ section.settings.form_19_unique_id }}" style="display: none;">{{ section.settings.next_btn_text }}</button>
              </div>
            <!-- <button class="button" type="button" id="submitButton18">{{ section.settings.submit_btn_text }}</button> -->
          <!-- </form> -->
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelector('.back-button-18').addEventListener('click', function() {
      const currentSnippet = document.getElementById('{{ section.settings.form_18_unique_id }}');
      const previousSnippet = document.getElementById('{{ section.settings.form_17_unique_id }}');

      if (previousSnippet) {
        previousSnippet.style.display = 'block';
      }

      if (currentSnippet) {
        currentSnippet.style.display = 'none';
      }
    });
    document.querySelector('.next-button-18').addEventListener('click', function() {
      const ownerNameId = document.querySelector('.owner_name').id;
      const ownerName = document.getElementById(ownerNameId).value;
  
      if (ownerName) {
        // alert('a');
        document.getElementById('line_item-' + ownerNameId).value = ownerName;
        console.log('Form data has been submitted for snippet 18.');
        const currentSnippet = document.getElementById('{{ section.settings.form_18_unique_id }}');
        const nextSnippet = document.getElementById('{{ section.settings.form_19_unique_id }}');

        if (nextSnippet) {
          nextSnippet.style.display = 'block';
        }

        if (currentSnippet) {
          currentSnippet.style.display = 'none';
        }
      } else {
        console.log('Please fill in the field for snippet 18.');
      }
    });
    const formInput18 = document.querySelector('.form-block-18 .form-container input');
    formInput18.addEventListener('input', function() {
      // alert('a');
      const ownerName = document.getElementById('{{ section.settings.form_18_owner_name_unique_id }}').value.trim();
      const nextButton = document.querySelector('.next-button-18');
      if (ownerName) {
        nextButton.style.display = 'block';
      } else {
        nextButton.style.display = 'none';
      }
    });
  // document.addEventListener('DOMContentLoaded', function() {
  //   const submitButton18 = document.getElementById('submitButton18');
  //   submitButton18.addEventListener('click', handleSubmitClick18);
  // });
  });
</script>
