<div
  id="{{ section.settings.form_16_unique_id }}"
  class="form-block-wrapper form-block-16 flex-block flex-center single-form"
  style="display: none;"
>
  <div class="left-block">
    <div class="left-block-box">
      <!-- <div class="block-num">16</div> -->
      <div class="content-box">
        <p class="ques-text content-heading">
          {{ section.settings.form_16_question }}
        </p>
        <div class="options-box">
          <!-- <form action=""> -->
            <div class="form-container">
              <div class="form-group">
                <input
                  type="text"
                  class="form-control patient_name"
                  placeholder="{{ "general.type_form.reply_here_text" | t }}"
                  autocomplete="name"
                  id="{{ section.settings.form_16_patient_name_unique_id }}"
                >                     
              </div>
            </div>
              <div class="buttons">
                <button class="back-button-16 button" style="display: block;">{{ section.settings.back_btn_text }}</button>
                <button class="next-button-16 button" data-next="{{ section.settings.form_17_unique_id }}" style="display: none;">{{ section.settings.next_btn_text }}</button>
              </div>
            <!-- <button class="button" type="button" id="submitButton16">{{ section.settings.submit_btn_text }}</button> -->
          <!-- </form> -->
        </div>
      </div>
    </div>
  </div>
</div>                     
<script>
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelector('.back-button-16').addEventListener('click', function() {
      const currentSnippet = document.getElementById('{{ section.settings.form_16_unique_id }}');
      const previousSnippet = document.getElementById('{{ section.settings.form_11_unique_id }}');

      if (previousSnippet) {
        previousSnippet.style.display = 'block';
      }

      if (currentSnippet) {
        currentSnippet.style.display = 'none';
      }
    });
    document.querySelector('.next-button-16').addEventListener('click', function() {
      const patientNameId = document.querySelector('.patient_name').id;
      const patientName = document.getElementById(patientNameId).value;
  
      if (patientName) {
        document.getElementById('line_item-' + patientNameId).value = patientName;
        console.log('Form data has been submitted for snippet 16.');
        const currentSnippet = document.getElementById('{{ section.settings.form_16_unique_id }}');
        const nextSnippet = document.getElementById('{{ section.settings.form_17_unique_id }}');

        if (nextSnippet) {
          nextSnippet.style.display = 'block';
        }

        if (currentSnippet) {
          currentSnippet.style.display = 'none';
        }
      } else {
        console.log('Please fill in the field for snippet 16.');
      }
    });                                                              
    const formInput16 = document.querySelector('.form-block-16 .form-container input');
    formInput16.addEventListener('input', function() {
      // alert('a');
      const patientName = document.getElementById('{{ section.settings.form_16_patient_name_unique_id }}').value.trim();
      const nextButton = document.querySelector('.next-button-16');
      if (patientName) {
        nextButton.style.display = 'block';
      } else {
        nextButton.style.display = 'none';
      }
    });
  });
  // document.addEventListener('DOMContentLoaded', function() {
  //   const submitButton16 = document.getElementById('submitButton16');
  //   submitButton16.addEventListener('click', handleSubmitClick16);
  // });
</script>
